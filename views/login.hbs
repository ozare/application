
{{> header }}

<h1>Вхід</h1>

{{> show_flash_messages }}

<form class="form-horizontal" action="/login" method="post">

  <div class="row">&nbsp;</div>

  <div class="form-group">
    <label for="email_inp" class="col-md-2 control-label col-md-offset-2">Електронна пошта працівника:</label>
    <div class="col-md-5">
      <input class="form-control" id="email_inp" type="text" name="username" required>
    </div>
  </div>

  <div class="form-group">
    <label for="pass_inp" class="col-md-2 control-label col-md-offset-2">Пароль</label>
    <div class="col-md-5">
      <input class="form-control" id="pass_inp" type="password" name="password" required>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-4 col-md-1">
      <button type="submit" class="btn btn-success" id="submit_login">Увійти</button>
    </div>
    <div class="col-md-4">
      <p class="pull-right"><a href="/forgot-password/">Не пам'ятаєте пароль?</a>{{#if allow_create_new_accounts }} | <a href="/register/">Зареєструвати нову компанію</a>{{/if}}</p>
    </div>
  </div>

</form>

<div class="row">&nbsp;</div>


{{> footer }}
