
{{> header }}

<h1>Нова компанія</h1>

{{> show_flash_messages }}

<div class="row">
  <div class="col-md-6 lead">Реєстрація облікового запису та адміністратора нової компанії</div>
</div>

<div class="row">
  <div class="col-md-9">
    <form class="form-horizontal" action="/register" method="post">

      <div class="form-group">
        <label for="company_name_inp" class="col-md-2 control-label">Назва компанії</label>
        <div class="col-md-6">
          <input class="form-control" id="company_name_inp" placeholder="Назва компанії" name="company_name" required>
        </div>
      </div>

      <div class="form-group">
        <label for="name_inp" class="col-md-2 control-label">Ім'я</label>
        <div class="col-md-6">
          <input class="form-control" id="name_inp" placeholder="Ім'я" name="name" required>
        </div>
      </div>

      <div class="form-group">
        <label for="lastname_inp" class="col-md-2 control-label">Прізвище</label>
        <div class="col-md-6">
          <input class="form-control" id="lastname_inp" placeholder="Прізвище" name="lastname" required>
        </div>
      </div>

      <div class="form-group">
        <label for="email_inp" class="col-md-2 control-label">Електронна адреса</label>
        <div class="col-md-6">
          <input class="form-control" id="email_inp" type="email" placeholder="Електронна адреса" name="email" required>
        </div>
      </div>

      <div class="form-group">
        <label for="pass_inp" class="col-md-2 control-label">Пароль</label>
        <div class="col-md-6">
          <input class="form-control" id="pass_inp" type="password" placeholder="Пароль" name="password" required>
        </div>
      </div>


      <div class="form-group">
        <label for="confirm_pass_inp" class="col-md-2 control-label">Підтвердження пароля</label>
        <div class="col-md-6">
          <input class="form-control" id="confirm_pass_inp" type="password" placeholder="Пароль" name="password_confirmed" required>
        </div>
      </div>

      <div class="form-group">
        <label for="country_inp" class="col-md-2 control-label">Країна</label>
        <div class="col-md-6">
          <select class="form-control" id="country_inp" placeholder="Назва країни" name="country">
            {{#each countries}}
            <option value="{{@key}}" {{#if this.default }} selected="selected" {{/if}}>{{@key}}: {{this.name}}</option>
            {{/each}}
          </select>
        </div>
      </div>

      <div class="form-group">
        <label for="timezone_inp" class="col-md-2 control-label">Часовий пояс</label>
        <div class="col-md-6">
          <select class="form-control" id="timezone_inp" placeholder="Часовий пояс" name="timezone">
            {{#each timezones_available}}
            <option value="{{this}}" {{#if_equal this 'Europe/London' }} selected="selected" {{/if_equal}}>{{this}}</option>
            {{/each}}
          </select>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
          <button id="submit_registration" type="submit" class="btn btn-success">Створити</button>
        </div>
      </div>

    </form>
  </div>

</div>

{{> footer }}
